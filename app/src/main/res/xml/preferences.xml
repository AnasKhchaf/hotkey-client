<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Connect">

        <com.rfw.hotkey.util.ui.MyEditTextPref
            app:key="connectTimeOut"
            app:title="@string/settings_connect_timeout_title"
            app:summaryBuilder="@string/settings_connect_timeout_summary_builder"
            app:onlyNum="true"
            app:defaultValue="1" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Live Screen">

        <com.rfw.hotkey.util.ui.MyEditTextPref
            app:key="liveScreenFPS"
            app:title="@string/settings_fps_title"
            app:summaryBuilder="@string/settings_fps_summary_builder"
            app:onlyNum="true"
            app:defaultValue="60" />

        <SeekBarPreference
            app:key="liveScreenCompressRatio"
            app:title="@string/settings_img_quality_title"
            app:summary="@string/settings_img_quality_summary_builder"
            app:defaultValue="25"
            app:showSeekBarValue="true"
            app:min="10"
            android:max="100" />

    </PreferenceCategory>

</PreferenceScreen>
