<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/dark_bg_light_primary_text</item>
    </style>

    <style name="SettingsTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/dark_bg_light_primary_text</item>
    </style>

    <!-- Regular Icon Style -->
    <style name="GeneralIconStyle" >
        <item name="android:layout_height">65sp</item>
        <item name="android:layout_width">65sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">14dp</item>
    </style>

    <!-- Bottom Menu Icon Style (inherits from MaterialButton style)-->
    <style name="BottomBarIconStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">@dimen/btm_bar_icon_size</item>
        <item name="iconGravity">textStart</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!-- Extras Menu Icon Style (inherits from MaterialButton style)-->
    <style name="ExtrasMenuIconStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_height">100sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_gravity">fill_horizontal</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">@dimen/extras_menu_icon_size</item>
        <item name="iconGravity">textStart</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Fullscreen theme (for LiveScreenActivity) -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
